<%- include("partials/header") -%>
<% %>

<h1>Home</h1>
<hr />
<p>
Posts will read here as created. "Secret": Admin to visit /compose to submit a post.
</p>
<br />

<% for(let post of posts.values()) { %>

  <div class="">
  <h3><%= post.title %></h3>
  </div>
  <div class="">
  <% if(post.body.length > 100) { %>
    <p>
      <%= post.body.substring(0, 100) + " ..." %>
      <a href="/posts/<%= post.title %>"> Read more</a>
    </p>
  <% } else { %>
    <p><%= post.body %></p>
  <% }  %>
  </div>
  <br />

<% } %>

<%- include("partials/footer") -%>

<%- include("header") -%>
    <!-- Scriplet tags <% %> allow control flow js code written alongside html -->
    <div class="box" id="heading">
          <h1 style="margin-bottom: 5px;"><%= title %></h1>
          <h1 style="margin-top: 5px;"><%= today_name %></h1>
    </div>


    <div class="box">

      <% for(let i = 0; i < listItems.length; i++) { %>
      <div class="item">
          <input type="checkbox">
          <p>
          <%= listItems[i] %>
          </p>
      </div>
      <% } %>
      <form class="item" action="/" method="post">
        <input placeholder="New item" type="text" name="input_tsk" autocomplete="off">
        <button type="submit" name="list" value=<%= title%>>+</button>
      </form>
    </div>

<%- include("footer") -%>
